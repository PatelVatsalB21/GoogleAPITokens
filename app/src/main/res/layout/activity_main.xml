<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp">

    <TextView
        android:id="@+id/access_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Token"
        android:textSize="24sp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/refresh_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh Token"
        android:textSize="24sp"
        android:layout_below="@id/access_token"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/authCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auth Code"
        android:textSize="24sp"
        android:layout_below="@id/refresh_token"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Tokens"
        android:layout_below="@id/authCode"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

</RelativeLayout>